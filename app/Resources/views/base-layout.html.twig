<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('dependencies/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('dependencies/bootstrap/dist/css/bootstrap-theme.min.css') }}">
        <style>
            #page{
                padding-top: 75px;
                padding-bottom: 40px;
            }
            body{
                background-color: #d87740;
            }
            footer{
                position: fixed;
                bottom: 0;
                left: 0;
                background-color: #00b3ee;
                color: #0f0f0f;
                width: 100%;
                text-align: center;
                padding: 5px;

            }
        </style>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body class="container-fluid">
{% block nav %}
    {{ include('includes/_nav.html.twig') }}
{% endblock %}
<div class="row " id="page">
    <div class="col-md-10 col-md-offset-1">
        <header>
            {% block header %}
                <h1>Mon super site</h1>
            {% endblock %}

        </header>
        <section class="col-md-8">
            {% block body %}{% endblock %}
        </section>
        <aside class="col-md-4">
            {% block aside %}{% endblock %}
        </aside>

    </div>
</div>
<footer>
    {% block footer %}
        ©opyright™: E4gleKnight
    {% endblock %}
</footer>

{% block javascripts %}
    <script src="{{ asset('dependencies/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('dependencies/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>